<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <StackLayout orientation="vertical">
        <Button tap="takePhoto" text="Take a Photo" />
        <ListView id="listview" items="{{ photos }}">
            <ListView.itemTemplate>
                <Label text="{{ title }}" />
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>